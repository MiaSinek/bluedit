<% if user_signed_in? && current_user.communities_subscribed_to.include?(community) %>
  <%= link_to "Unsubscribe", community_subscriptions_path(community), method: :delete, remote: user_signed_in?, class:"btn btn-outline btn-small w-100 block text-center"  %>
<% else %>
  <%= link_to "Subscribe", community_subscriptions_path(community), method: :post, remote: user_signed_in?, class:"btn btn-purple btn-small w-100 block text-center" %>
<% end %>