<p class="text-sm text-gray-600 my-2">comment as <%= link_to current_user.username, "#", class:"link" %></p>

<%# TODO: change to form_with, since that's the default since Rails 5.1 %>
<%= form_for [@submission, Comment.new], remote: true do |f| %>
  <div class="relative">
    <%= f.text_area :body, class: "input h-32 border border-gray-400 resize-none", placeholder: "What are your thoughts?" %>

    <%= f.submit class: "btn btn-small btn-purple block w-full text-center mt-2 lg: mt-0 lg:text-left lg:absolute lg:bottom-0 lg:right-0 lg:mb-2 lg:mr-2 lg:w-auto lg:inline-flex" %>
  </div>
<% end %>