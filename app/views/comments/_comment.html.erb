<div class="flex items-start py-1 mt-2 items-start" id="comment-<%= comment.id %>" >
  <div class="flex flex-col items-center">
    <% unless user_signed_in? %>
      <%= link_to new_user_session_path do %>
        <%= render_svg "icons/up-vote", title: "upvote", styles: "fill-current text-gray-600 hover:text-purple-500" %>
      <% end %>

      <span class="text-gray-700 text-center text-sm -mt-1 js-votes"><%= comment.total_vote_count  %></span>

      <%= link_to  new_user_session_path do %>
        <%= render_svg "icons/down-vote", title: "downvote", styles: "fill-current text-gray-600 hover:text-purple-500" %>
      <% end %>
    <% else %>
     <%= link_to upvote_submission_comment_path(comment.submission, comment), method: :put, remote: true do %>
        <%= render_svg "icons/up-vote", title: "upvote", styles: "fill-current text-gray-600 hover:text-purple-500" %>
      <% end %>

      <span class="text-gray-700 text-center text-sm -mt-1 js-votes"><%= comment.total_vote_count  %></span>

      <%= link_to downvote_submission_comment_path(comment.submission, comment), method: :put, remote: true do %>
        <%= render_svg "icons/down-vote", title: "downvote", styles: "fill-current text-gray-600 hover:text-purple" %>
      <% end %>
    <% end %>

  </div>
  <div class="flex-1 pl-4">
    <%= render 'submissions/posted_by', submission: comment %>
    <div class="text-gray-800 leading-normal text-sm"><%= comment.body %></div>

    <div class="my-2 flex">
    <% if author_of(comment) %>
      <%= link_to  edit_submission_comment_path(comment.submission, comment), class: "no-underline pr-1", remote: true do %>
       <%= render_svg 'icons/edit', styles: "fill-current text-gray-500 icon-sm hover:text-gray-600" %>
      <% end %>
      <%= link_to submission_comment_path(comment.submission, comment), method: :delete,  data: { confirm: 'Are you sure?' }, class: "no-underline" do %>
      <%= render_svg 'icons/delete', styles: "fill-current text-gray-500 icon-sm hover:text-gray-600" %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>